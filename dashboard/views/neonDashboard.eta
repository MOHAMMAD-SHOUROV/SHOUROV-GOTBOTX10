<style>
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');

body{
  margin:0;
  font-family:'Orbitron',sans-serif;
  background:#000;
  color:white;
  overflow-x:hidden;
}

/* ğŸ”¥ Animated Gradient */
.animated-bg{
  position:fixed;
  inset:0;
  z-index:-3;
  background:linear-gradient(120deg,#00ffff,#7f00ff,#ff0080,#00ff9d);
  background-size:400% 400%;
  animation:neonMove 20s ease infinite;
  filter:blur(60px);
  opacity:.35;
}

/* ğŸŒŒ Floating Particles */
#particles{
  position:fixed;
  inset:0;
  z-index:-2;
  overflow:hidden;
}
.particle{
  position:absolute;
  width:6px;
  height:6px;
  border-radius:50%;
  background:rgba(0,255,255,.8);
  box-shadow:0 0 12px currentColor;
  animation:float 12s linear infinite;
}

@keyframes float{
  from{transform:translateY(110vh) translateX(0);opacity:0}
  to{transform:translateY(-10vh) translateX(80px);opacity:1}
}

body::before{
  content:"";
  position:fixed;
  inset:0;
  background:rgba(0,0,0,.65);
  z-index:-1;
}

@keyframes neonMove{
  0%{background-position:0% 50%}
  50%{background-position:100% 50%}
  100%{background-position:0% 50%}
}

.card{
  background:rgba(255,255,255,.05);
  backdrop-filter:blur(14px);
  border-radius:22px;
  border:1px solid rgba(255,255,255,.1);
  transition:.4s;
}
.card:hover{transform:translateY(-6px) scale(1.03)}

.neon{box-shadow:0 0 20px currentColor}
.glow-blue{color:#00f2ff}
.glow-pink{color:#ff007a}
.glow-purple{color:#9d00ff}
.glow-green{color:#22c55e}
.glow-yellow{color:#facc15}

video{border-radius:18px;cursor:pointer}
</style>
</head>

<body class="p-6">
