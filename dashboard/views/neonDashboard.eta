<script>
/* ğŸ”Š Sounds */
const hoverSound=document.getElementById("hoverSound");
const clickSound=document.getElementById("clickSound");
document.querySelectorAll("a,.card").forEach(el=>{
  el.onmouseenter=()=>hoverSound.play();
  el.onclick=()=>clickSound.play();
});

/* ğŸ¥ Video */
const video=document.getElementById("coverVideo");
video.onclick=()=>{video.muted=false;video.play();};

/* ğŸ“Š Bot Info */
async function loadBotInfo(){
  try{
    const r=await fetch("/api/botinfo");
    const d=await r.json();
    groups.innerText=d.groups;
    users.innerText=d.users;
    commands.innerText=d.commands;
    admins.innerText=d.admins;
    bdtime.innerText=d.bdTime;
  }catch(e){}
}
setInterval(loadBotInfo,1000);
loadBotInfo();

/* ğŸŒŒ Create Floating Particles */
const p=document.getElementById("particles");
for(let i=0;i<40;i++){
  const s=document.createElement("span");
  s.className="particle";
  s.style.left=Math.random()*100+"vw";
  s.style.animationDuration=8+Math.random()*12+"s";
  s.style.animationDelay=Math.random()*5+"s";
  s.style.color=["#00f2ff","#ff007a","#9d00ff","#22c55e"][Math.floor(Math.random()*4)];
  p.appendChild(s);
}
</script>

