<!DOCTYPE html>
<html>
<head>
<title>Cookie Manager</title>
<link rel="stylesheet" href="/css/style.css">
</head>

<body>

<h2>üç™ Cookie Manager (5 Slots)</h2>

<form id="cookieForm">
<textarea name="c1" placeholder="Cookie 1"></textarea>
<textarea name="c2" placeholder="Cookie 2"></textarea>
<textarea name="c3" placeholder="Cookie 3"></textarea>
<textarea name="c4" placeholder="Cookie 4"></textarea>
<textarea name="c5" placeholder="Cookie 5"></textarea>

<button type="submit">Save Cookies</button>
</form>

<h2>üîÑ Switch Account</h2>

<select id="accIndex">
<option value="0">Account 1</option>
<option value="1">Account 2</option>
<option value="2">Account 3</option>
<option value="3">Account 4</option>
<option value="4">Account 5</option>
</select>

<button onclick="switchAcc()">Switch</button>

<script>
document.getElementById("cookieForm").onsubmit = async function(e){
    e.preventDefault();
    const formData = new FormData(this);

    const res = await fetch("/saveCookies", {
        method:"POST",
        body:new URLSearchParams(formData)
    });

    alert("Saved!");
};

async function switchAcc(){
    const index = document.getElementById("accIndex").value;

    await fetch("/switchAccount", {
        method:"POST",
        headers:{ "Content-Type":"application/json" },
        body:JSON.stringify({ index })
    });

    alert("Bot Restarting...");
}
</script>

</body>
</html>